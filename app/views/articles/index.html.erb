<p id="notice"><%= notice %></p>
<div class="container">
  <h1>MyBlog</h1>
  <h2>This is my first WebApp</h2>
  <%= form_tag(articles_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search]%>
            <%= submit_tag "Search", :name => nil %>
            <% end %>
  
  
  <div class="row">
  <div class="col-sm-12">
     <% @articles.each do |article| %> 
       <div class="card">
         <div  class="card-block">
             <h4 class="card-title"><%= article.title %></h4>
           <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
         </div>
         <div class="card-footer">  
           <%= link_to 'Edit', edit_article_path(article), class: 'btn btn:warning' %>
           <%= link_to 'Delete', article_path(article), class: "btn btn:warning",
                    :method => :delete,
                    data: {:confirm => 'Do you want to delete this article?'} %>

         </div>
       </div>
     <% end %>
  </div>
  </div>

  <br>

  <%= link_to 'New Article', new_article_path %>
</div>
